<%- include("partials/header") %>


<section class="login">

    <div class="flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 mt-16">
          <div>
            
            <h2 class="text-center text-3xl font-extrabold text-gray-900">
              Register your account
            </h2>
            
          </div>
          <form action="/register" method="POST" class="mt-8 space-y-6">
            <!-- <input type="hidden" name="remember" value="true"> -->

            <% if(messages.error){ %> 
              <span class="text-red-500 text-sm">*<%= messages.error %> </span>
            <% } %>   

            <div class="rounded-md shadow-sm -space-y-px">
              <div>
                <label for="Name" class="sr-only">Enter Name</label>
                <input id="Name" name="name" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Enter Name">
              </div>
              <div>
                <label for="email-address" class="sr-only">Email address</label>
                <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
              </div>
              <div>
                <label for="password" class="sr-only">Password</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
              </div>
            </div>
      
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                
              </div>
      
              <div class="text-sm">
                <a href="/login" class="font-medium ">
                  Already have account?
                </a>
              </div>
            </div>
      
            <div>
              <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white btn-primary">
                Register
              </button>
            </div>
          </form>
        </div>
      </div>

</section>













<%- include("partials/footer") %>